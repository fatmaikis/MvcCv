@model List<MvcCv.Models.Entity.TblSkills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string renk = "";
    string labelrenk = "";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-3">
                            <h1>Yeteneklerim</h1>
                        </div>
                      
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Yetenek Listem</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                 

                                    <a href="/Skill/AddSkill" class="btn btn-primary"> Yeni Yetenek Ekle</a>
                                    <br />
                                    <br />
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenek</th>
                                                <th>Derece</th>
                                                <th style="width: 40px">Oran</th>
                                                <th>Sil</th>
                                                <th>Güncelle</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                if (item.Rate >= 0 && item.Rate <= 50)
                                                {
                                                    renk = "progress-bar bg-danger";
                                                    labelrenk = "badge bg-danger";
                                                }
                                                else if (item.Rate >= 51 && item.Rate <= 70)
                                                {
                                                    renk = "progress-bar bg-warning";
                                                    labelrenk = "badge bg-warning";
                                                }
                                                else if (item.Rate >= 71 && item.Rate <= 84)
                                                {
                                                    renk = "progress-bar bg-primary";
                                                    labelrenk = "badge bg-primary";
                                                }
                                                else
                                                {
                                                    renk = "progress-bar bg-success";
                                                    labelrenk = "badge bg-success";
                                                }

                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>@item.Skill</td>

                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="@renk" style="width: @item.Rate%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="@labelrenk">@item.Rate%</span></td>
                                                    <td>
                                                        <a href="/Skill/DeleteSkill/@item.ID" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-trash">
                                                            </i>
                                                            Sil
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-info btn-sm" href="/Skill/UpdateSkill/@item.ID">
                                                            <i class="fas fa-pencil-alt">
                                                            </i>
                                                            Güncelle
                                                        </a>
                                                    </td>

                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                 
                        </div>
                  
                    </div>
            
                </div>
            </section>

        </div>

     

</body>
</html>

