@model List<MvcCv.Models.Entity.TblEducations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<h3>Eğitim Listesi</h3>
<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.SubTitle2</td>
            <td>@item.GNO</td>
            <td>@item.Date</td>
            <td><a href="/Education/DeleteEducation/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.ID" class="btn btn-warning">Güncelle</a></td>

        </tr>

    }



</table>
<a href="/Education/AddEducation" class="btn btn-primary">Yeni Eğitim Ekle</a>
