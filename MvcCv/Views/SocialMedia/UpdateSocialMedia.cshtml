@model MvcCv.Models.Entity.TblSocialMedias
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Sosyal Medya Güncelleme Sayfası</h3>
<br />

<form method="post" class="form-group">

    @Html.HiddenFor(x => x.ID)
    @Html.Label("Sosyal Medya İsmi")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya Linki")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya Iconu")
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Güncelle</button>



</form>