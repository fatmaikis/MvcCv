@model List<MvcCv.Models.Entity.TblCommunication>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";


}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">

                        <div class="card-body">


                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)item.Date).ToString("dd-MM-yyyy"))
                                            </span>

                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>

                                            <div class="timeline-item">

                                                <span class="time"><i class="far fa-clock"></i>@item.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@item.NameSurname</a> @item.Subject </h3>
                                                <div class="timeline-body">
                                                    @item.Message
                                                </div>
                                            </div>

                                        </div>

                                    }
                                </div>
                                <a href="/Certificate/AddCertificate" class="btn btn-primary"> Yeni mesaj Ekle</a>
                            </div>
                            <!-- /.tab-pane -->
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>

    </section>

</body>
</html>