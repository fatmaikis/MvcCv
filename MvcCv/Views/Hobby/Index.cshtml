@model List<MvcCv.Models.Entity.TblHobbies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Hobi Düzenleme Sayfası</h3>
<br />
<form method="post">

    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
<textarea rows="5" class="form-control" name="Description"> @item.Description</textarea>
        <br />
        <label>Açıklama 2</label>
<textarea rows="5" class="form-control" name="Description2"> @item.Description2</textarea>



    }



    <br />
    <button class="btn btn-success">Güncelle</button>
</form>